 //ENTRADA
Inicio
escreval ("informe o valor do sal�rio")
leia (valordesalario)
escreval ("Informe valor de gasto mensal")
leia (valordegastomensal)


 // PROCESSAMENTO E SA�DA
se valordesalario <= valordegastomensal entao
escreval ("Saldo negativo!")
senao
escreval (" Saldo positivo")
fimse
