leia (m1)
escreval("Nota 2")
leia (m2)
escreval("Nota 3")
leia (m3)
escreval(" Nota 4")
leia (m4)

 // PROCESSAMENTO E SA�DA
mediafinal <- (m1+m2+m3+m4)/4
se mediafinal >= 7 entao
escreval (nome, " Passou")
senao
escreval(nome, " N�o passou")
fimse
